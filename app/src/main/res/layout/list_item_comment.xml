<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@drawable/border">

    <ImageView
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:maxWidth="48dp"
        android:maxHeight="48dp"
        android:src="@drawable/ic_baseline_person_48"
        android:layout_alignParentStart="true"
        android:id="@+id/image_view_avatar" />

    <TextView
        android:layout_marginStart="7dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/image_view_avatar"
        android:layout_toStartOf="@id/text_view_teacher"
        android:layout_alignParentTop="true"
        android:textSize="19sp"
        android:text="Test Testovich"
        android:id="@+id/text_view_user_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="7dp"
        android:id="@+id/text_view_teacher"
        android:text="@string/item_comment_teacher"
        android:textStyle="bold"
        android:textSize="15sp"
        />

    <TextView
        android:layout_marginStart="7dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/image_view_avatar"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/text_view_user_name"
        android:textSize="15sp"
        android:text="Для надёжного доступа вы знаете к чему пользуйтесь вы знаете чем и продолжайте продолжать а то чё вы это самое ляяяяяяя" />

</RelativeLayout>